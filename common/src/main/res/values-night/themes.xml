<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAdnMortyVOD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/activityBackground</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/geebung</item>
        <item name="colorPrimaryVariant">@color/tuna</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/AppBarLayout.Custom</item>
        <item name="mediaRouteTheme">@style/CustomMediaRouterTheme</item>
    </style>

    <style name="AppBarLayout.Custom" parent="Widget.Design.AppBarLayout">
        <item name="elevation">0dp</item>
        <item name="layout_insetEdge">none</item>
        <item name="android:background">@color/colorNavbarBackground</item>
    </style>

    <style name="AppBarLayout.Common" parent="Widget.Design.AppBarLayout">
        <item name="elevation">0dp</item>
        <item name="layout_insetEdge">none</item>
        <item name="android:background">@drawable/app_bar_background</item>
    </style>

    <style name="Toolbar.Common" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@drawable/app_bar_background</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@color/colorToolbarTextColor</item>
        <item name="theme">@style/ToolbarNavigationControlsTheme</item>
    </style>

    <style name="ToolbarNavigationControlsTheme">
        <item name="colorControlNormal">@color/colorToolbarBackButton</item>
    </style>
</resources>